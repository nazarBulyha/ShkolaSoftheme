<Window x:Class="HW6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="RandomGuess" Height="125" Width="250">
    <Grid Margin="0,0,2,-4" FocusManager.FocusedElement="{Binding ElementName=userNumber}">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <TextBox Name="userNumber" PreviewKeyDown="EnterClicked" HorizontalAlignment="Left" Height="23" Margin="10,5,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Button Content="Guess" HorizontalAlignment="Left" Margin="150,5,0,0" VerticalAlignment="Top" Width="68" Height="65" Grid.Row="1" Click="GuessNumber"/>
        <TextBox Name="randNumber" HorizontalAlignment="Left" Height="23" Margin="10,45,0,0" TextWrapping="Wrap" Text="????" TextAlignment="Center" VerticalAlignment="Top" Width="120" Grid.Row="1"/>

    </Grid>
</Window>
